<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item.news.cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    app:contentPaddingBottom="16dp"
    app:contentPaddingLeft="16dp"
    app:contentPaddingRight="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Veterinary Care of Ithaca"
            android:fontFamily="sans-serif-light"
            android:layout_marginTop="16dp"
            android:paddingTop="16dp"
            android:textColor="#000"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/address1"
            android:layout_below="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text=" 712 W Court St"
            android:fontFamily="sans-serif-light"
            android:textColor="#000"
            android:textSize="15dp" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageButton"
            android:src="@drawable/map_interface"
            android:paddingRight="16dp"
            android:layout_alignTop="@+id/address1"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/address2"
            android:layout_below="@+id/address1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ithaca, NY 14850"
            android:fontFamily="sans-serif-light"
            android:textColor="#000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/address3"
            android:layout_below="@+id/address2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="United States"
            android:fontFamily="sans-serif-light"
            android:textColor="#000"
            android:textSize="15dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ Book Appointment"
            android:id="@+id/button"
            android:background="#fff"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:fontFamily="sans-serif-light"
            android:textSize="15dp"
            android:layout_below="@+id/address3" />


    </RelativeLayout>
</android.support.v7.widget.CardView>

